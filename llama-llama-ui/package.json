{
  "name": "llama-llama-ui",
  "private": true,
  "version": "0.0.1",
  "description": "Llama Llama UI",
  "author": "Trevor Eyre <trevoreyre@gmail.com> (https://trevoreyre.com)",
  "license": "UNLICENSED",
  "type": "module",
  "main": "src/index.js",
  "module": "src/index.js",
  "scripts": {
    "start": "storybook dev -p 9002",
    "lint": "npm run lint:lit-analyzer && npm run lint:eslint",
    "lint:eslint": "eslint '**/*.js'",
    "lint:lit-analyzer": "lit-analyzer src",
    "format": "prettier \"**/*.{cjs,html,js,json,md,ts}\" --ignore-path ./.eslintignore --write",
    "build": "pnpm build:custom-elements-manifest && pnpm build:typography && pnpm build:storybook",
    "build:custom-elements-manifest": "custom-elements-manifest analyze",
    "build:storybook": "storybook build",
    "build:typography": "node scripts/build-theme-typography.js"
  },
  "customElements": "custom-elements.json",
  "devDependencies": {
    "@capsizecss/core": "^3.0.0",
    "@capsizecss/metrics": "^0.1.0",
    "@custom-elements-manifest/analyzer": "^0.5.3",
    "@storybook/addon-essentials": "^7.0.13",
    "@storybook/addon-links": "^7.0.13",
    "@storybook/blocks": "^7.0.13",
    "@storybook/web-components": "^7.0.13",
    "@storybook/web-components-vite": "^7.0.13",
    "@webcomponents/webcomponentsjs": "^2.6.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.32.0",
    "eslint-plugin-storybook": "^0.6.12",
    "just-extend": "^6.0.1",
    "lit": "^2.8.0",
    "lit-analyzer": "^1.1.10",
    "outdent": "^0.8.0",
    "prettier": "^2.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "storybook": "^7.0.13"
  }
}
