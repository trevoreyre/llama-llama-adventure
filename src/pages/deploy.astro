---
// @ts-nocheck
import App from '~/app.astro'
import { env } from '~/env.js'

const netlifyDeployUrl = env.netlifyDeployUrl
---

<script>
  // @ts-nocheck
  document.getElementById('deploy').addEventListener('click', ({ target }) => {
    fetch(target.dataset.url, { method: 'POST' })
  })
</script>

<html lang="eg">
  <head>
    <title>Deploy Llama Llama Adventure</title>
  </head>
  <body>
    <button id="deploy" data-url={netlifyDeployUrl}>Deploy</button>
  </body>
</html>

<style>
  body {
    margin: 0;
    padding: 24px;
  }

  #deploy {
    display: block;
    border: 1px solid transparent;
    margin: 0;
    border-radius: 8px;
    padding-block: 16px;
    padding-inline: 24px;
    background-color: #58c42e;
    color: #fff;
    cursor: pointer;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial,
      'Noto Sans', sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol',
      'Noto Color Emoji';
    font-weight: 500;
    font-size: 1rem;
    line-height: 1;
    letter-spacing: 0.5px;
  }
</style>
